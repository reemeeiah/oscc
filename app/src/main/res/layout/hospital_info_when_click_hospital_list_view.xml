<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:drawingCacheQuality="auto"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        app:srcCompat="@drawable/hospital" />

    <TextView
        android:id="@+id/hospital_name"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hospital Name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/hospital_city"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hospital address"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hospital_contact"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hospital Contact"
        android:textAlignment="textStart"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/hospital_Url"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hospital Url"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="specialists list:"
            android:textAlignment="center"
            android:textColor="#7ab4ad"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="135dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/rhdlrrmecbybcxscihqy" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Specialist_Name"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Specialist Name"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Specialist_Major"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Specialist Major"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Specialist_Email"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Specialist Email"
            android:textAlignment="textStart"
            android:textSize="18sp" />

    </LinearLayout>


    <Button
        android:id="@+id/cancel_action"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textColor="@color/backg1"
        android:textSize="18sp"
        tools:text="back" />

</LinearLayout>